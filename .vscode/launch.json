{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch index.html",
			"type": "chrome",
			"request": "launch",
			"file": "index.html",
			"diagnosticLogging": true
		},
		{
			"name": "Launch localhost with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:8080/",
			"sourceMaps": true,
			//"webRoot": "."
			"webRoot": "${workspaceRoot}",
			"diagnosticLogging": true
		},
		{
			"name": "Attach Chrome",
			"type": "chrome",
			"request": "attach",
			"url": "http://localhost:8080/",
			"port": 9222,
			"sourceMaps": true,
			"webRoot": "${workspaceRoot}",
      		"diagnosticLogging": true
		}
	]
}